<!DOCTYPE html>
<html lang="en">
<head>
    {% include '_head_files.njk' %}
    {% block data %}
        {% import 'macros/head_assets.njk' as assets %}
            {{ assets.active(pageTitle) }}
    {% endblock %}
</head>
<body class="{{ pageTitle }}" data-barba="wrapper">
    <main data-barba="container" data-barba-namespace="{{ pageTitle }}"{% if openScrolling %} open-scroll{% endif %}>
        {% block header %}{% endblock %}
        {% block content %}{% endblock %}
        {% if openScrolling == false %}
            {% block counter %}{% endblock %}
            {% include 'custom/scroll-lock.html' %}
        {% endif %}
        {% block footer %}{% endblock %}
    </main>
    {% include '_body_files.njk' %}
</body>
</html>