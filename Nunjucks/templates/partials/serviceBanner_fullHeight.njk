<section class="service__banner section__content {{ section['class'] }} col-xs-12"{% if section['onload'] != false %} data-interaction="{{section['onload']}}"{% endif %}>
{% for content in section['ref'] %}
    {% set interaction = section['inner'] %}
    {% include "partials/components/_section_text.njk" %}
    {% if content.itemList %}
        <div class="service__banner--item-wrapper flex-h col-xs-12">
            {% for list in content.itemList %}
                {% include "partials/components/_section_item.njk" %}
            {% endfor %}
        </div>
    {% endif %}
    {% include "partials/components/_section_bg.njk" %}
{% endfor %}
</section>