<section class="service__banner section__content service__banner--bottom {{ section['class'] }} col-xs-12"{% if section['onload'] != false %} data-interaction="{{section['onload']}}"{% endif %}>
{% for content in section['ref'] %}
    {% set interaction = section['inner'] %}
    {% include "components/section_text.njk" %}
    {% if content.itemList %}
        <div class="service__banner--item-wrapper flex-h col-xs-12">
            {% for list in content.itemList %}
                {% include "components/_service_item.njk" %}
            {% endfor %}
        </div>
    {% endif %}
    {% include "components/section_bg.njk" %}
{% endfor %}
</section>