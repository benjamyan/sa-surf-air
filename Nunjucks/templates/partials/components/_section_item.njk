<article class="service__banner--item service__banner--item-{{loop.index}} col-xs-{{12 / loop.length}}"{% if section['onclick'] != false %} onclick="{{section['onclick']}}"{% endif %}>
    <div class="service__banner--item-inner"{% if section['onenter'] != false %} data-interaction="{{section['onenter']}}"{% endif %}>
        <div class="service__banner--item-close">
            <svg viewPort="0 0 12 12" version="1.1" xmlns="http://www.w3.org/2000/svg"><line x1="1" y1="11" x2="11" y2="1"/><line x1="1" y1="1" x2="11" y2="11"/></svg>
        </div>
        {% if list.mainTitle %}
            <div class="service__banner--item-title">
                <img class="section__content--sub-icon" src="{{list.mainTitleIcon}}" />
                <h3>{{list.mainTitle}}</h3>
            </div>
        {% endif %}
        {% if list.mainCopy %}
            <p>{{list.mainCopy}}</p>
        {% endif %}
        <details class="service__banner--item-list">
            <summary>{{list.btnText}}</summary>
            <ul>
            {% for value, item in list.listItems %}
                <li>{{item}}</li>
            {% endfor %}
            </ul>
        </details>
    </div>
    <div class="blur col-xs-12"></div>
</article>
